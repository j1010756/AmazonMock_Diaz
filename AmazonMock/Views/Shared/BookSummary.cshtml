@{
}

<!--Get info from db-->
@model Book
<div class="card m-1 p-1">
    <h4>
        <!--book name-->
        @Model.Title
        <!--show price-->
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$@Model.Price</small></span>
    </h4>
    <ul>
        <!--author-->
        <li>Author: @Model.Author</li>
        <!--publisher-->
        <li>Publisher: @Model.Publisher</li>
        <!--ISBN-->
        <li>ISBN: @Model.ISBN</li>
        <!--classification-->
        <li>Classification: @Model.Classification</li>
        <!--category-->
        <li>Category: @Model.Category</li>
        <!--page count-->
        <li>Number of Pages: @Model.PageCount</li>
    </ul>

</div>